{
  "version": 2,
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "name": "White",
          "slug": "white",
          "color": "#FFFFFF"
        },
        {
          "name": "Light gray",
          "slug": "light-gray",
          "color": "#F7F7F7"
        },
        {
          "name": "Orange",
          "slug": "orange",
          "color": "#F48840"
        },
        {
          "name": "Blackish",
          "slug": "blackish",
          "color": "#1E1E1E"
        }
      ]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "spacing": {
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "typography": {
      "fontStyle": true,
      "fontWeight": true,
      "textDecoration": true,
      "textTransform": true,
      "fontSizes": [
        {
          "size": 12,
          "name": "Small",
          "slug": "small"
        },
        {
          "size": 16,
          "name": "Regular",
          "slug": "regular"
        },
        {
          "size": 20,
          "name": "Large",
          "slug": "large"
        },
        {
          "size": 25,
          "name": "Extra large",
          "slug": "extra-large"
        }
      ],
      "fontStyles": {
        "default": "normal",
        "options": ["normal", "italic"]
      }
    }
  },

  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    },
    {
      "name": "sidebar",
      "title": "Sidebar",
      "area": "general"
    },
    {
      "name": "post-info",
      "title": "post-info",
      "area": "general"
    }
  ]
}
